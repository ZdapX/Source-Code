<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SourceCode</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-container">
        <header style="margin-bottom: 5rem;">
            <p class="mono" style="color: var(--accent);">[ ACCESS_GRANTED ]</p>
            <h1>Source_Code</h1>
            <p class="mono">kami membagikan source code projek disini secara gratis</p>
        </header>

        <section class="search-section" style="margin-bottom: 4rem;">
            <form action="/" method="GET">
                <input type="text" name="search" class="cyber-input" placeholder="SCAN_DATABASE_FOR_PROJECTS...">
            </form>
        </section>

        <main>
            <% projects.forEach(p => { %>
            <a href="/project/<%= p._id %>" class="project-card">
                <div class="card-info">
                    <div class="card-meta">
                        <span class="badge"><%= p.language %></span>
                        <span class="mono">ID: <%= p._id.toString().slice(-6) %></span>
                    </div>
                    <h2><%= p.name %></h2>
                </div>
                
                <div class="card-stats">
                    <div class="stat-group">
                        <span class="stat-label">Downloads</span>
                        <span class="stat-value"><%= p.downloads %></span>
                    </div>
                    <div class="stat-group">
                        <span class="stat-label">Stability</span>
                        <span class="stat-value" style="color: var(--accent);">99.9%</span>
                    </div>
                    <div class="stat-group">
                        <span class="stat-label">Likes</span>
                        <span class="stat-value"><%= p.likes %></span>
                    </div>
                </div>
            </a>
            <% }) %>
        </main>
    </div>

    <!-- Floating Pill Nav -->
    <nav class="nav-floating">
        <a href="/" class="nav-link active">DASHBOARD</a>
        <a href="/profile" class="nav-link">IDENTITIES</a>
        <a href="/chat-pilih" class="nav-link">COMMS</a>
        <a href="/login" class="nav-link">AUTH</a>
    </nav>
</body>
</html>
