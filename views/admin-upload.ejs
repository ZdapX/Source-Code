<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Project - Admin</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .form-container { 
            max-width: 600px; margin: 40px auto; padding: 30px; 
            background: #0a0a0a; border: 2px solid #ff0000; border-radius: 15px; 
        }
        h2 { color: #ff0000; text-align: center; margin-bottom: 25px; text-transform: uppercase; }
        label { display: block; margin-top: 15px; color: #ccc; font-size: 0.9rem; }
        input, textarea, select { 
            width: 100%; padding: 12px; margin-top: 5px; 
            background: #1a1a1a; border: 1px solid #333; color: white; 
            border-radius: 5px; box-sizing: border-box;
        }
        input:focus, textarea:focus { border-color: #ff0000; outline: none; }
        .hidden { display: none; }
        .btn-upload { 
            width: 100%; background: #ff0000; color: white; border: none; 
            padding: 15px; margin-top: 25px; font-weight: bold; cursor: pointer; 
            border-radius: 5px; transition: 0.3s;
        }
        .btn-upload:hover { background: #cc0000; }
        .back-link { display: block; text-align: center; margin-top: 15px; color: #666; text-decoration: none; }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>ðŸš€ Upload Project</h2>
        
        <!-- PENTING: enctype harus multipart/form-data -->
        <form action="/admin/upload" method="POST" enctype="multipart/form-data">
            
            <label>Nama Project</label>
            <input type="text" name="name" placeholder="Contoh: Website E-Commerce" required>

            <label>Bahasa Pemrograman</label>
            <input type="text" name="language" placeholder="Contoh: Javascript, PHP, Python" required>

            <label>Pilih Tipe Source Code</label>
            <select name="type" id="typeSelect" onchange="toggleInput()">
                <option value="file">Upload File (Zip/Rar)</option>
                <option value="code">Paste Code (Teks)</option>
            </select>

            <!-- Bagian Upload File -->
            <div id="fileInputGroup">
                <label>Pilih File Project (.zip, .rar, .txt)</label>
                <input type="file" name="projectFile" id="fileField">
            </div>

            <!-- Bagian Paste Code -->
            <div id="codeInputGroup" class="hidden">
                <label>Paste Source Code Kamu</label>
                <textarea name="projectCode" id="codeField" rows="10" placeholder="Paste kode di sini..."></textarea>
            </div>

            <label>Catatan Project (Opsional)</label>
            <textarea name="note" rows="3" placeholder="Tambahkan instruksi atau fitur..."></textarea>
            
            <label>Gambar Preview (Opsional)</label>
            <input type="file" name="previewImg" accept="image/*">

            <button type="submit" class="btn-upload">PUBLIKASIKAN PROJEK</button>
        </form>

        <a href="/" class="back-link">Kembali ke Home</a>
    </div>

    <script>
        function toggleInput() {
            const type = document.getElementById('typeSelect').value;
            const fileGroup = document.getElementById('fileInputGroup');
            const codeGroup = document.getElementById('codeInputGroup');
            const fileField = document.getElementById('fileField');
            const codeField = document.getElementById('codeField');

            if (type === 'file') {
                fileGroup.classList.remove('hidden');
                codeGroup.classList.add('hidden');
                fileField.setAttribute('required', 'required');
                codeField.removeAttribute('required');
            } else {
                fileGroup.classList.add('hidden');
                codeGroup.classList.remove('hidden');
                codeField.setAttribute('required', 'required');
                fileField.removeAttribute('required');
            }
        }
        // Jalankan sekali saat load agar atribut required sesuai default
        window.onload = toggleInput;
    </script>
</body>
</html>
