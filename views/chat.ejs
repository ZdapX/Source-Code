<!DOCTYPE html>
<html>
<head>
    <title>Chat Admin</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        .chat-container { max-width: 600px; margin: 20px auto; border: 1px solid #ff0000; height: 80vh; display: flex; flex-direction: column; }
        #messages { flex: 1; overflow-y: auto; padding: 20px; display: flex; flex-direction: column; }
        .msg { margin-bottom: 10px; padding: 10px; border-radius: 10px; max-width: 70%; }
        .msg.me { align-self: flex-end; background: #ff0000; color: white; }
        .msg.other { align-self: flex-start; background: #333; color: white; }
        .chat-input { display: flex; padding: 10px; background: #0a0a0a; }
        .chat-input input { flex: 1; padding: 10px; background: #1a1a1a; border: 1px solid #ff0000; color: white; }
    </style>
</head>
<body>
    <div class="chat-container">
        <div style="padding:15px; background:#111; border-bottom:1px solid red; text-align:center;">
            CHAT DENGAN ADMIN
        </div>
        <div id="messages"></div>
        <div class="chat-input">
            <input id="input" autocomplete="off" placeholder="Tulis pesan..." />
            <button onclick="sendMessage()" class="btn-info">KIRIM</button>
        </div>
    </div>

    <script>
        const socket = io();
        const userId = "USER_" + Math.floor(Math.random() * 10000);

        function sendMessage() {
            const input = document.getElementById('input');
            if (input.value) {
                socket.emit('chat message', { user: userId, msg: input.value });
                input.value = '';
            }
        }

        socket.on('chat message', function(data) {
            const item = document.createElement('div');
            item.className = data.user === userId ? 'msg me' : 'msg other';
            item.innerHTML = `<b>${data.user}:</b> <br> ${data.msg}`;
            document.getElementById('messages').appendChild(item);
            document.getElementById('messages').scrollTop = document.getElementById('messages').scrollHeight;
        });
    </script>
</body>
</html>
