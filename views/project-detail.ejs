<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CORE_DATA // <%= project.name %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* --- CORE FIX: RESPONSIVE TERMINAL --- */
        .terminal-container {
            background: #050505;
            border: 1px solid var(--zinc-800);
            border-radius: 2rem;
            margin-top: 2rem;
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 100%; /* Mencegah keluar dari layar */
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        }

        .terminal-header {
            background: var(--zinc-900);
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--zinc-800);
        }

        .terminal-dots { display: flex; gap: 6px; }
        .terminal-dot { width: 8px; height: 8px; border-radius: 50%; background: var(--zinc-800); }

        .code-viewport {
            max-height: 500px; /* Tinggi maksimal di desktop */
            min-height: 200px;
            overflow: auto; /* Scroll aktif di dalam */
            padding: 1.5rem;
            background-image: linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px);
            background-size: 100% 1.6rem;
        }

        pre {
            margin: 0;
            white-space: pre; /* Tetap menjaga format kode asli */
            word-wrap: normal;
        }

        code {
            font-family: var(--font-mono);
            font-size: 0.9rem;
            color: #eee;
            line-height: 1.6;
        }

        /* --- MOBILE ADJUSTMENTS --- */
        @media (max-width: 768px) {
            .code-viewport {
                max-height: 350px; /* Lebih pendek di HP agar tidak menutupi tombol */
                padding: 1rem;
            }
            .terminal-container {
                border-radius: 1.5rem;
            }
            code { font-size: 0.8rem; }
            
            /* Memastikan Sidebar/Action Buttons tidak terpotong */
            .sidebar {
                margin-top: 2rem;
                width: 100% !important;
            }
        }

        /* Container fluid fix */
        .main-content {
            width: 100%;
            min-width: 0; /* Penting untuk flex/grid agar tidak overflow */
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Back Link -->
        <div style="margin-bottom: 2rem;">
            <a href="/" class="nav-link" style="display: inline-flex; align-items: center; gap: 0.5rem;">
                <span class="mono">[ ‚Üê BACK_TO_DATABASE ]</span>
            </a>
        </div>

        <!-- Header Section -->
        <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 3rem; flex-wrap: wrap; gap: 1.5rem;">
            <div style="flex: 1; min-width: 280px;">
                <div style="display: flex; align-items: center; gap: 0.8rem; margin-bottom: 1rem;">
                    <span class="badge"><%= project.language %></span>
                    <span class="badge" style="background: transparent; border: 1px solid var(--accent);"><%= project.type.toUpperCase() %></span>
                </div>
                <h1 style="margin: 0;"><%= project.name %></h1>
            </div>
            <div style="text-align: right;">
                <p class="stat-label">Operator</p>
                <p class="stat-value" style="color: var(--accent);"><%= project.uploadedBy %></p>
            </div>
        </div>

        <!-- Layout Grid -->
        <!-- Style ini akan otomatis di-override oleh CSS Media Query yang kita buat di style.css -->
        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 3rem;" class="detail-grid">
            
            <div class="main-content">
                <!-- Preview Image -->
                <% if(project.preview) { %>
                    <div style="border-radius: 2.5rem; overflow: hidden; border: 1px solid var(--zinc-800); margin-bottom: 2.5rem; background: var(--zinc-900);">
                        <img src="<%= project.preview %>" style="width: 100%; display: block; object-fit: cover;">
                    </div>
                <% } %>

                <!-- Documentation -->
                <div style="background: var(--zinc-900); padding: 2rem; border-radius: 2.5rem; border: 1px solid var(--zinc-800); margin-bottom: 2.5rem;">
                    <p class="mono" style="color: var(--accent); margin-bottom: 0.8rem;">[ DOCS_STREAM ]</p>
                    <p style="color: var(--zinc-400); font-size: 1rem; line-height: 1.6;">
                        <%= project.note || "No technical documentation provided." %>
                    </p>
                </div>

                <!-- Code Terminal (Hanya Muncul Jika Tipe Code) -->
                <% if(project.type === 'code') { %>
                    <div class="terminal-container">
                        <div class="terminal-header">
                            <div class="terminal-dots">
                                <div class="terminal-dot"></div>
                                <div class="terminal-dot"></div>
                                <div class="terminal-dot" style="background: var(--accent);"></div>
                            </div>
                            <span class="mono" style="font-size: 0.6rem; opacity: 0.4;">READ_ONLY_MODE</span>
                        </div>
                        <div class="code-viewport">
                            <pre><code id="targetCode"><%= project.content %></code></pre>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Sidebar Actions -->
            <div class="sidebar">
                <div style="background: var(--zinc-900); border: 1px solid var(--zinc-800); border-radius: 3rem; padding: 2.5rem; position: sticky; top: 2rem;">
                    <div style="margin-bottom: 2rem;">
                        <p class="stat-label">Likes</p>
                        <p class="stat-value" id="likeCount" style="font-size: 2.5rem;"><%= project.likes %></p>
                    </div>

                    <div style="margin-bottom: 2rem;">
                        <p class="stat-label">Downloads</p>
                        <p class="stat-value" style="font-size: 1.2rem;"><%= project.downloads %></p>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <% if(project.type === 'file') { %>
                            <a href="/project/<%= project._id %>/download-hit" class="btn-glow" style="text-decoration: none;">
                                INITIALIZE_DOWNLOAD
                            </a>
                        <% } else { %>
                            <button class="btn-glow" id="copyBtn" onclick="runCopy()">
                                COPY_SOURCE_CODE
                            </button>
                        <% } %>

                        <button class="cyber-input" style="cursor: pointer; text-align: center; border-radius: 3rem;" onclick="runLike()">
                            RESONATE_LIKE
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Floating Nav -->
    <nav class="nav-floating">
        <a href="/" class="nav-link">EXIT_REPOS</a>
    </nav>

    <script>
        // Like Handler
        async function runLike() {
            const res = await fetch('/project/<%= project._id %>/like', { method: 'POST' });
            const data = await res.json();
            if(data.success) {
                const el = document.getElementById('likeCount');
                el.innerText = data.totalLikes;
                el.style.color = 'var(--accent)';
                setTimeout(() => el.style.color = 'white', 500);
            }
        }

        // Copy Handler
        function runCopy() {
            const code = document.getElementById('targetCode').innerText;
            const btn = document.getElementById('copyBtn');
            navigator.clipboard.writeText(code).then(() => {
                const old = btn.innerText;
                btn.innerText = "COPIED!";
                btn.style.background = "white";
                btn.style.color = "black";
                setTimeout(() => {
                    btn.innerText = old;
                    btn.style.background = "var(--accent)";
                    btn.style.color = "white";
                }, 2000);
            });
        }
    </script>
</body>
</html>
