<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= project.name %> | Detail</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div style="max-width: 1000px; margin: 50px auto; padding: 0 20px;">
        <a href="/" class="btn-modern btn-outline" style="margin-bottom: 30px;">[ BACK_TO_LIST ]</a>
        
        <h1 style="font-family: var(--font-pixel); color: var(--primary); font-size: 2rem;"><%= project.name %></h1>
        <p style="font-family: var(--font-pixel); font-size: 0.8rem; margin: 15px 0;">LANG: <%= project.language %></p>

        <% if(project.preview) { %>
            <img src="<%= project.preview %>" style="width: 100%; border: 4px solid var(--primary); margin: 20px 0;">
        <% } %>

        <div style="background: #111; padding: 25px; border-left: 8px solid var(--primary); margin: 30px 0;">
            <p style="color: var(--text-dim); font-weight: bold; margin-bottom: 10px;">ADMIN_NOTE:</p>
            <p><%= project.note || "No specific notes provided for this repository." %></p>
        </div>

        <% if(project.type === 'code') { %>
            <div class="code-wrapper">
                <pre><code><%= project.content %></code></pre>
            </div>
            <button class="btn-modern" style="width: 100%;" onclick="copyCode()">COPY_TO_CLIPBOARD</button>
        <% } %>

        <div style="display: flex; gap: 20px; margin-top: 40px; align-items: center;">
            <a href="/project/<%= project._id %>/download-hit" class="btn-modern" style="padding: 20px 40px; font-size: 1rem;">DOWNLOAD_NOW</a>
            
            <button class="btn-modern btn-outline" onclick="likeProject('<%= project._id %>')">
                ❤️ <span id="l-count"><%= project.likes %></span>
            </button>

            <div style="font-family: var(--font-pixel); font-size: 0.7rem; color: var(--text-dim);">
                DOWNLOADS: <%= project.downloads %>
            </div>
        </div>
    </div>

    <script>
        async function likeProject(id) {
            const res = await fetch(`/project/${id}/like`, { method: 'POST' });
            const data = await res.json();
            if(data.success) document.getElementById('l-count').innerText = data.totalLikes;
        }
        function copyCode() {
            navigator.clipboard.writeText(`<%= project.content %>`);
            alert("Code Copied!");
        }
    </script>
</body>
</html>
